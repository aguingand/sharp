{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./resources/js/*"]
    },
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "public"]
}
